<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark">
	<s:Rect width="100%" height="100%" >
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="#FFFFFF" />
				<s:GradientEntry color="#F3EDE0" ratio="0.9"/>
				<s:GradientEntry color="#FFFFFF" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	<s:Label left="10" top="10" bottom="10" text="{data.doc}" width="25%" fontSize="12" height="13"/>
	<s:Label top="10" left="100" text="{data.nombre}" width="50%" fontSize="12" height="13"/>
	<s:Label right="10" top="10" bottom="10" width="25%" text="{data.value}" textAlign="right" fontSize="12" height="13"/>
</s:ItemRenderer>
